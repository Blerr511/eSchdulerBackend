{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"pretty": true,
		"sourceMap": true,
		"target": "es6",
		"outDir": "./dist",
		"baseUrl": "src" /* This is where all your code is*/,
		"typeRoots": ["./src/@types", "./node_modules/@types", "@types"]
	},
	"ts-node": {
		"files": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
